<?xml version="1.0" encoding="UTF-8"?>

<entity-mappings 
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
    http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
    version="2.1">

	<package>org.point85.workschedule</package>
	
	<mapped-superclass class="Named" access="FIELD">
        <attributes>
			<!-- primary key -->
			<id name="primaryKey">
				<generated-value strategy="IDENTITY"/>
			</id>
			
			<!-- name -->
			<basic name="name">
				<column name="NAME"/>
			</basic>
			
			<!-- description -->
			<basic name="description">
				<column name="DESCRIPTION"/>
			</basic>
        </attributes>
    </mapped-superclass>
    
    <mapped-superclass class="TimePeriod" access="FIELD">
        <attributes>
        	<!-- start time -->
			<basic name="startTime">
				<column name="START_TIME"/>
			</basic>
			
			<!-- duration-->
			<basic name="duration">
				<column name="DURATION"/>
			</basic>
        </attributes>
    </mapped-superclass>

	<!-- WorkSchedule table -->
	<entity class="WorkSchedule" access="FIELD">
	<table name="WORK_SCHEDULE" />
		<attribute-override name="primaryKey"> <column name="WS_KEY"/> 
		</attribute-override>
		
		<attributes>	
			<!-- version -->
			<version name="version" >
				<column name="VERSION"/> 
			</version>
			
			<!-- list of shifts -->
			<one-to-many name="shifts" orphan-removal="true" target-entity="Shift" mapped-by="workSchedule">
				<cascade>
					<cascade-all/>
				</cascade>	
			</one-to-many>	
			
			<!-- list of teams -->
			<one-to-many name="teams" orphan-removal="true" target-entity="Team" mapped-by="workSchedule">
				<cascade>
					<cascade-all/>
				</cascade>	
			</one-to-many>	
			
			<!-- list of non-working periods -->
			<one-to-many name="nonWorkingPeriods" orphan-removal="true" target-entity="NonWorkingPeriod" mapped-by="workSchedule">
				<cascade>
					<cascade-all/>
				</cascade>	
			</one-to-many>									
		</attributes>
	</entity>
	
	<!-- Shift table -->
	<entity class="Shift" access="FIELD">
	<table name="SHIFT" />
		<attribute-override name="primaryKey"> <column name="SHIFT_KEY"/> 
		</attribute-override>
		
		<attributes>						
			<!-- work schedule -->
			<many-to-one name="workSchedule">
            	<join-column name="WS_KEY"/>
        	</many-to-one>
			
			<!-- transient attributes -->
			<transient name="breaks"/>					
		</attributes>
	</entity>
	
	<!-- Team table -->
	<entity class="Team" access="FIELD">
	<table name="TEAM" />
		<attribute-override name="primaryKey"> <column name="TEAM_KEY"/> 
		</attribute-override>
		
		<attributes>			
			<!-- rotation -->
			<one-to-one name="rotation" orphan-removal="true" target-entity="Rotation">
				<join-column name="ROTATION_KEY"/>
				<cascade>
					<cascade-all/>
				</cascade>	
			</one-to-one>
			
			<!-- rotation start-->
			<basic name="rotationStart">
				<column name="ROTATION_START"/>
			</basic>
			
			<!-- work schedule -->
			<many-to-one name="workSchedule">
            	<join-column name="WS_KEY"/>
        	</many-to-one>								
		</attributes>
	</entity>
	
	<!-- rotation table -->
	<entity class="Rotation" access="FIELD">
	<table name="ROTATION" />
		<attribute-override name="primaryKey"> <column name="ROTATION_KEY"/> 
		</attribute-override>
			
		<attributes>			
			<!-- list of segments -->
			<one-to-many name="rotationSegments" orphan-removal="true" target-entity="RotationSegment" mapped-by="rotation">
				<cascade>
					<cascade-all/>
				</cascade>	
			</one-to-many>	
			
			<!-- transient attributes -->
			<transient name="periods"/>								
		</attributes>
	</entity>
	
	<!-- Rotation segment table -->
	<entity class="RotationSegment" access="FIELD">
	<table name="ROTATION_SEGMENT" />
		<attribute-override name="primaryKey"> <column name="SEGMENT_KEY"/> 
		</attribute-override>	
		
		<attributes>
			<!-- primary key -->
			<id name="primaryKey">
				<column name="SEGMENT_KEY"/>
				<generated-value strategy="IDENTITY"/>
			</id>
			
			<!-- sequence -->
			<basic name="sequence">
				<column name="SEQUENCE"/>
			</basic>
			
			<!-- rotation parent -->
			<many-to-one name="rotation">
            	<join-column name="ROTATION_KEY"/>
        	</many-to-one>
			
			<!-- starting shift -->
			<one-to-one name="startingShift" orphan-removal="true" target-entity="Shift">
				<join-column name="SHIFT_KEY"/>
				<cascade>
					<cascade-all/>
				</cascade>	
			</one-to-one>
			
			<!-- days on -->
			<basic name="daysOn">
				<column name="DAYS_ON"/>
			</basic>
			
			<!-- days off -->
			<basic name="daysOff">
				<column name="DAYS_OFF"/>
			</basic>
		</attributes>
	</entity>
	
	<!-- Non-working time table -->
	<entity class="NonWorkingPeriod" access="FIELD">
	<table name="NON_WORKING_PERIOD" />
		<attribute-override name="primaryKey"> <column name="PERIOD_KEY"/> 
		</attribute-override>
			
		<attributes>			
			<!-- start date and time -->
			<basic name="startDateTime">
				<column name="START_DATE_TIME"/>
			</basic>
			
			<!-- duration-->
			<basic name="duration">
				<column name="DURATION"/>
			</basic>
			
			<!-- work schedule -->
			<many-to-one name="workSchedule">
            	<join-column name="WS_KEY"/>
        	</many-to-one>	
		</attributes>
	</entity>
		
	<named-query name="WS.ByName">
		<query>SELECT ws FROM WorkSchedule ws WHERE ws.name = :name</query>
	</named-query>
	
	<named-query name="WS.ByKey">
		<query>SELECT ws FROM WorkSchedule ws WHERE ws.primaryKey = :key</query>
	</named-query>
	
	<named-query name="WS.Names">
		<query>SELECT ws.name FROM WorkSchedule ws</query>
	</named-query>
	
	<named-query name="TEAM.ByKey">
		<query>SELECT team FROM Team team WHERE team.primaryKey = :key</query>
	</named-query>
	
	<named-native-query name="ROTATION.CrossRef">
		<query>select TEAM_KEY from TEAM where ROTATION_KEY = ?1</query>
	</named-native-query>
	
</entity-mappings>